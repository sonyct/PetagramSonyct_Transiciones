<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvImgProfile"
    android:layout_width="@dimen/cvImProfile_w"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_imgprfle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padImGridProfile"
            android:background="@color/colorHembra"
            >

            <ImageView
                android:id="@+id/imgPhotoProfile"
                android:layout_width="@dimen/cvImProfile_w"
                android:layout_height="@dimen/cvImProfile_imh"
                android:src="@drawable/dalmata"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/cvImProfile_padRate"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                >
                <TextView
                    android:id="@+id/tvRateImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ml2_cardview"
                    android:textStyle="italic"
                    android:textSize="@dimen/cvImProfile_txtSizeRate"
                    android:text="@string/rate_mascota"/>

                <ImageButton
                    android:id="@+id/btnRatingImg"
                    android:layout_width="@dimen/cvImProfile_icRate"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    android:background="?android:selectableItemBackground"
                    android:src="@drawable/ic_yellowbone"
                    android:layout_marginLeft="@dimen/cvImProfile_icRate_ml"

                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>